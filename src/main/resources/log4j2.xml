<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{DEFAULT} [%t] %-5level [%logger{36}] - %maxLength{%msg}{1000}%n"/>
        </Console>
        <File name="LogFile" fileName="${sys:logFilename:-logs/cdb.log}">
            <PatternLayout pattern="%d{DEFAULT} [%t] %-5level [%logger{36}] - %maxLength{%msg}{1000}%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="LogFile"/>
        </Root>
    </Loggers>
</Configuration>